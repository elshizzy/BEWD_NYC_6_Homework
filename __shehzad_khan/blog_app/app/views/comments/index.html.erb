<h1>Listing comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.email %></td>
        <td><%= link_to 'Show', "/posts/#{comment.post_id}/comments/#{comment.id}" %></td>
        <td><%= link_to 'Edit', "/posts/#{comment.post_id}/comments/#{comment.id}/edit" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
